                <EditText
                    android:id="@+id/txt"
                    android:layout_width="302dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <Button
